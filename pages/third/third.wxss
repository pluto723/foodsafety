.base{
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #253334;
}
#text1{
  position: absolute;
  font-size: 30px;
  color: white;
  top: 5%;
  font-family: 'Times New Roman', Times, serif;
  left: 5%;
}
#text2{
  position: absolute;
  font-size: 20px;
  color:lightgray;
  top: 10%;
  font-family: 'Times New Roman', Times, serif;
  left: 5%;
  font-weight: bolder;
  text-decoration: underline;
}
.container{
  position: absolute;
  width: 90%;
  height: 40%;
  top: 15%;
  background-color:white;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 20px;
}
.list{
  position: absolute;
  top: 15%;
  left: 15%;
  font-size: 20px;
  color:gray;
  font-family: 'Times New Roman', Times, serif;
}
#person{
  position: absolute;
  width: 100%;
  height: 85%;
  top: 10%;
  left: 20%;
}
.information_box{
  position: absolute;
  width: 90%;
  height: 25%;
  bottom: 15%;
  background-color: white;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 20px;
  overflow: auto;
  font-family: 'Times New Roman', Times, serif;
  padding-top: 2%;
}
.information_title{
  position: relative;
  height: 15%;
  width: 80%;
  left: 0;
  right: 0;
  margin: auto;
  text-align: center;
}
.information_text{
  text-indent: 2rem;
  position: relative;
  top: -12%;
}
#view{
  position: relative;
  width: 80%;
  height: 80%;
}