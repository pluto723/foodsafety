/* pages/first/first.wxss */
.base {
	position : absolute;
	width : 100%;
	height : 100%;
}
#img1{
  max-width: 100%;
  max-height: 100%;
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translate(-50%, -50%);
  height: 50%;
}
#text1{
  position: absolute;
  top: 36%;
  margin: auto;
  left: 0;
  right: 0;
  width: 60%;
  text-align: center;
  font-size: 40px;
  font-family: 'Times New Roman', Times, serif;
  color: white;
  font-weight: bolder;
}
#content{
  position: absolute;
  width: 60%;
  height: 7%;
  top: 45%;
  left: 0;
  right: 0;
  margin: auto;
}
.saying{
  position: relative;
  text-align: center;
  color: white;
  font-family: 'Times New Roman', Times, serif;
  font-size: 20px;
}
#btn1{
  position: absolute;
  top: 65%;
  left: 0;
  right: 0;
  margin: auto;
  color: white;
  background-color: #7C9A92;
  font-family: 'Times New Roman', Times, serif;
}
.bar{
  position: absolute;
  bottom: 2%;
  width: 80%;
  left: 0;
  right: 0;
  margin: auto;
  height: 10%;
  display: flex;
  flex-direction: row;
}
.item{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.BarImg{
  position: relative;
  width: 60%;
  height: 60%;
  left: 0;
  right: 0;
  margin: auto;
}
.BarText{
  text-align: center;
  color: #d0dfdb;
}