<view class="base">
  <view class="title">
    <view id="text1">Welcome!</view>
    <view id="text2">这里是食品配料知识图谱</view>
    <image id="img1" src="/utils/images/icon.png" mode="aspectFit"></image>
  </view>
  <view id="information">
    <view id="text3">{{show}}</view>
    <image id="img2" src="/utils/images/img2.png" mode="aspectFit"/>
  </view>
  <view class="echarts">
    <image src="/utils/images/full.png" mode="aspectFit" id="full" bindtap="fullShow"></image>
    <ec-canvas id="echarts" canvas-id="echarts" ec="{{ec}}"></ec-canvas>
  </view>
  <view class="bar">
    <view class="item" bindtap="PageOne">
      <image class="BarImg" src="/utils/images/item1.png" mode="aspectFit"></image>
      <view class="BarText">扫码界面</view>
    </view>
    <view class="item" bindtap="PageTwo">
      <image class="BarImg" src="/utils/images/item2.png" mode="aspectFit"></image>
      <view class="BarText">知识图谱</view>
    </view>
    <view class="item" bindtap="PageThree">
      <image class="BarImg" src="/utils/images/item3.png" mode="aspectFit"></image>
      <view class="BarText">健康评估</view>
    </view>
  </view>
</view>