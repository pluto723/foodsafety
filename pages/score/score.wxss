.background{
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #253334;
}
.echarts{
  position: absolute;
  bottom: 50%;
  height: 35%;
  width: 90%;
  background-color: white;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 20px;
}
#text1{
  position: absolute;
  font-size: 30px;
  color: white;
  top: 5%;
  font-family: 'Times New Roman', Times, serif;
  left: 5%;
}
#text2{
  position: absolute;
  font-size: 20px;
  color:lightgray;
  top: 10%;
  font-family: 'Times New Roman', Times, serif;
  left: 5%;
  font-weight: bolder;
  text-decoration: underline;
}
#btn1{
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  bottom: 15%;
  height: 50px;
  border-radius: 25px;
  opacity: 0.2;  
  filter: alpha(opacity=20);
  transform: scale(1);
  width: 60%;
}
#btn1:active{
  transform: scale(0.95);
}
#btnText1{
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  bottom: 16.5%;
  width: 50%;
  text-align: center;
  font-size: 23px;
  color: white;
}
