.base{
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #253334;
}
#text1{
  position: absolute;
  font-size: 30px;
  color: white;
  top: 5%;
  font-family: 'Times New Roman', Times, serif;
  left: 5%;
}
#text2{
  position: absolute;
  font-size: 20px;
  color:lightgray;
  top: 10%;
  font-family: 'Times New Roman', Times, serif;
  left: 5%;
  font-weight: bolder;
  text-decoration: underline;
}
.container{
  position: absolute;
  width: 90%;
  height: 40%;
  top: 15%;
  background-color:white;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 20px;
}

#person{
  position: absolute;
  width: 100%;
  height: 85%;
  top: 10%;
  left: 20%;
}
.information{
  position: absolute;
  width: 90%;
  height: 25%;
  bottom: 15%;
  background-color: white;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 20px;
}

.bar{
  position: absolute;
  bottom: 2%;
  width: 80%;
  left: 0;
  right: 0;
  margin: auto;
  height: 10%;
  display: flex;
  flex-direction: row;
}
.item{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.BarImg{
  position: relative;
  width: 60%;
  height: 60%;
  left: 0;
  right: 0;
  margin: auto;
}
.BarText{
  text-align: center;
  color: #d0dfdb;
}
#view{
  position: relative;
  width: 80%;
  height: 80%;
}