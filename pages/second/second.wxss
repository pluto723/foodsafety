.base{
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #253334;
}
#text1{
  position: absolute;
  font-size: 30px;
  color: white;
  top: 5%;
  font-family: 'Times New Roman', Times, serif;
  left: 5%;
}
#text2{
  position: absolute;
  font-size: 20px;
  color:lightgray;
  top: 12%;
  font-family: 'Times New Roman', Times, serif;
  left: 5%;
}
#img1{
  position: absolute;
  left: 40%;
  top: 0%;
  height: 20%;
}
#information{
  position: absolute;
  height: 30%;
  width: 90%;
  background: white;
  top: 20%;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 20px;
}
#img2{
  position: relative;
  left: 40%;
  height: 35%;
  top: 65%;
}
.echarts{
  position: absolute;
  bottom: 15%;
  height: 30%;
  width: 90%;
  background-color: white;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 20px;
}
.bar{
  position: absolute;
  bottom: 2%;
  width: 80%;
  left: 0;
  right: 0;
  margin: auto;
  height: 10%;
  display: flex;
  flex-direction: row;
}
.item{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.BarImg{
  position: relative;
  width: 60%;
  height: 60%;
  left: 0;
  right: 0;
  margin: auto;
}
.BarText{
  text-align: center;
  color: #d0dfdb;
}