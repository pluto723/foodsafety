.background{
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #253334;
}
.echarts{
  position: absolute;
  bottom: 55%;
  height: 30%;
  width: 90%;
  background-color: white;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 20px;
}
#text1{
  position: absolute;
  font-size: 30px;
  color: white;
  top: 5%;
  font-family: 'Times New Roman', Times, serif;
  left: 5%;
}
#text2{
  position: absolute;
  font-size: 20px;
  color:lightgray;
  top: 10%;
  font-family: 'Times New Roman', Times, serif;
  left: 5%;
  font-weight: bolder;
  text-decoration: underline;
}
.detail{
  position: absolute;
  bottom: 15%;
  height: 35%;
  width: 90%;
  background-color: white;
  left: 0;
  right: 0;
  margin: auto;
